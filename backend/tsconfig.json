{
  "compilerOptions": {
    // Environment
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    
    // TypeScript strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    
    // Output
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    
    // Node types
    "types": ["node"],

    // Misc
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
